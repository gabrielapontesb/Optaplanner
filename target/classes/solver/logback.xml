<configuration>
    <appender nome="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <logger nome="org.optaplanner" level="info">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger nome="projetoflash" level="debug">
        <appender-ref ref="STDOUT" />
    </logger>
</configuration>